@model BikeShop.Domain.User

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <table class="table table-borderless">
                <tr>
                    <td scope="row" class="font-weight-bold">@Html.DisplayNameFor(model => model.Email)</td>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <td scope="row" class="font-weight-bold">@Html.DisplayNameFor(model => model.Password)</td>
                    <td>@Html.DisplayFor(model => model.Password)</td>
                </tr>
                <tr>
                    <td scope="row" class="font-weight-bold">@Html.DisplayNameFor(model => model.Role)</td>
                    <td>@Html.DisplayFor(model => model.Role.Name)</td>
                </tr>
            </table>
        </div>
    </div>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> 
    <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
</div>
